<% include ../header %>
<h1>Posts</h1>
<ul>
	<% for (var i = 0; i < posts.length; i++) { %>
	<li>
		<a href="/posts/<%= i %>"><%= posts[i].title %></a>
		<a href="/posts/<%= i %>/edit">[Edit]</a>
		<!--_method : deleteメソッドとして扱われる-->
		<form method="post" action="/posts/<%= i %>?_method=DELETE">
			<input type="hidden" value="id" value="<%= i %>">
			<input type="hidden" value="_csrf" value="<%= csrftoken %>">
			<input type="submit" value="Delete">
		</form>
	</li>
	<% } %>
</ul>
<p>
	<a href="/posts/new">Add New</a>
</p>
<% include ../footer %>
